{
    "name": "prismastore",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint . --ext .tsx,.ts",
        "test": "jest",
        "commit": "git-cz",
        "prepare": "husky install",
        "lint:fix": "eslint . --ext .tsx,.ts --fix"
    },
    "dependencies": {
        "@headlessui/react": "^1.7.17",
        "@radix-ui/react-avatar": "^1.0.3",
        "@types/react": "18.2.21",
        "@types/react-dom": "18.2.7",
        "autoprefixer": "10.4.15",
        "axios": "^1.5.0",
        "clsx": "^2.0.0",
        "eslint": "8.49.0",
        "eslint-config-next": "13.4.19",
        "jest": "^29.7.0",
        "lucide-react": "^0.277.0",
        "next": "^13.5.1",
        "postcss": "8.4.29",
        "query-string": "^8.1.0",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-hot-toast": "^2.4.1",
        "tailwind-merge": "^1.14.0",
        "tailwindcss": "3.3.3",
        "typescript": "5.2.2",
        "zustand": "^4.4.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@types/jest": "^29.5.1",
        "@types/node": "^20.6.3",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/typescript-estree": "^6.7.2",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^8.0.0",
        "lint-staged": "^14.0.1",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm test"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
